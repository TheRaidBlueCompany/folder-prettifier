<ContentDialog
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="Folder_Prettifier.Dialogs.LoginDialog"
    x:Name="loginDialog"
    Title="Login"
    PrimaryButtonText="Login"
    PrimaryButtonClick="LoginUser"
    SecondaryButtonText="Signup"
    SecondaryButtonClick="SignupUser"
    CloseButtonText="Cancel"
    DefaultButton="Primary">

    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,20">
            <TextBlock Margin="0,0,3,0">Still Confused? See</TextBlock>
            <HyperlinkButton Click="UserBenefits" Padding="0">benifits of being a user</HyperlinkButton>
        </StackPanel>

        <TextBox x:Name="emailBox" Header="Email Address" PlaceholderText="Email" />
        <PasswordBox x:Name="passwordBox" Header="Password" PlaceholderText="Password" Margin="0,5,0,0" />
    </StackPanel>
</ContentDialog>
