<ContentDialog x:ConnectionId='1'
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="Folder_Prettifier.Dialogs.SignupDialog"
    x:Name="signupDialog"
    Title="Signup"
    PrimaryButtonText="Signup"
                                   
    SecondaryButtonText="Login"
                                    
    CloseButtonText="Cancel"
    DefaultButton="Primary">

    <StackPanel>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,20">
            <TextBlock Margin="0,0,3,0">Still Confused? See</TextBlock>
            <HyperlinkButton Padding="0">benifits of being a user</HyperlinkButton>
        </StackPanel>

        <TextBox Header="Name" PlaceholderText="Name" />
        <TextBox Header="Email Address" PlaceholderText="Email" Margin="0,5,0,0" />
        <PasswordBox Header="Password" PlaceholderText="Password" Margin="0,5,0,0" />
    </StackPanel>
</ContentDialog>

