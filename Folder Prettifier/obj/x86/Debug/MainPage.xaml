<Page
    x:Class="Folder_Prettifier.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:muxc="using:Windows.UI.Xaml.Controls">

    <NavigationView x:ConnectionId='2' x:Name="navigationView"                                                    PaneDisplayMode="Auto">
        <NavigationView.MenuItems>
            <NavigationViewItemHeader Content="Actions" />
            <NavigationViewItem Icon="Folder" Content="Manage Folders" Tag="ManageFoldersPage"  />
            <NavigationViewItem Icon="MoveToFolder" Content="Redirect" Tag="RedirectPage" />
            <NavigationViewItem Icon="OutlineStar" Content="Watch folder" Tag="WatchPage" />
            <NavigationViewItem Icon="SyncFolder" Content="Backup" Tag="BackupPage" />
            <NavigationViewItem Icon="Remote" Content="Cloud Sync" Tag="CloudSyncPage" />
            <NavigationViewItemHeader Content="Admininstration" />
            <NavigationViewItem Icon="OpenFile"  Content="File Encryption" Tag="FileEncryptionPage" />
            <NavigationViewItem Icon="UnSyncFolder" Content="Folder Encryption" Tag="FolderEncryptionPage" />
        </NavigationView.MenuItems>

        <NavigationView.PaneFooter>
            <NavigationViewItem x:ConnectionId='3' Icon="OtherUser" Content="Login" Tag="Login"                />
        </NavigationView.PaneFooter>

        <NavigationView.Content>
            <ScrollViewer>
                <Frame x:ConnectionId='4' x:Name="contentFrame" Padding="40" />
            </ScrollViewer>
        </NavigationView.Content>
    </NavigationView>

</Page>

