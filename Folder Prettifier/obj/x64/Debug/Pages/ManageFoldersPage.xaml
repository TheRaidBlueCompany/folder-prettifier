<Page
    x:Class="Folder_Prettifier.Pages.ManageFoldersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel>
        <GridViewHeaderItem>
            <TextBlock FontSize="30" FontWeight="Medium">Manage Folders</TextBlock>
        </GridViewHeaderItem>

        <!-- Manage -->
        <StackPanel Margin="0,40,0,0">
            <!-- Manage -->
            <StackPanel Margin="0,0,0,30">
                <StackPanel HorizontalAlignment="Left">
                    <TextBlock FontSize="25">Manage</TextBlock>
                </StackPanel>
                <StackPanel HorizontalAlignment="Right" Margin="0,-33,0,0">
                    <Button x:ConnectionId='17'                        >Start Management</Button>
                </StackPanel>
            </StackPanel>

            <!-- Name Manipulation -->
            <StackPanel Margin="0,0,0,30">
                <StackPanel Orientation="Horizontal">
                    <ToggleSwitch x:ConnectionId='15' x:Name="isNameManipulation" OffContent="" OnContent=""                                  Width="45" />
                    <TextBlock x:ConnectionId='16' FontSize="16" FontWeight="Medium" Margin="10,3,0,0"                                >Name manipulation</TextBlock>
                </StackPanel>
                
                <StackPanel>
                    <!-- General -->
                    <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                        <RadioButton x:ConnectionId='10' Margin="0,0,50,0" x:Name="capitalize"                         >First letter capital, all small</RadioButton>
                        <RadioButton x:ConnectionId='11' Margin="0,0,50,0" x:Name="antiCapitalize"                             >First letter small, all capital</RadioButton>
                        <RadioButton x:ConnectionId='12' Margin="0,0,50,0" x:Name="allCapital"                         >All capital</RadioButton>
                        <RadioButton x:ConnectionId='13' Margin="0,0,50,0" x:Name="allSmall"                       >All small</RadioButton>
                        <RadioButton x:ConnectionId='14' Margin="0,0,50,0" x:Name="none"                   >None</RadioButton>
                    </StackPanel>

                    <!-- Append -->
                    <StackPanel Margin="0,10,0,0">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Margin="0,6,15,0">Append at Start</TextBlock>
                            <TextBox x:ConnectionId='9' x:Name="nameStartsWith" PlaceholderText="Start with" Width="300" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                            <TextBlock Margin="0,6,20,0">Append at End</TextBlock>
                            <TextBox x:ConnectionId='8' x:Name="nameEndsWith" PlaceholderText="End with" Width="300" />
                        </StackPanel>
                    </StackPanel>

                    <!-- Replace -->
                    <StackPanel Margin="0,10,0,0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Margin="0,6,29,0">Replace tasks</TextBlock>
                        <Button x:ConnectionId='7'                              >Manage Tasks</Button>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <!-- Categorize -->
            <StackPanel Margin="0,0,0,30">
                <StackPanel Orientation="Horizontal">
                    <ToggleSwitch x:ConnectionId='5' x:Name="isCategorize" OffContent="" OnContent=""                            Width="45" />
                    <TextBlock x:ConnectionId='6' FontSize="16" FontWeight="Medium" Margin="10,3,0,0"                          >Categorize files on the basis of</TextBlock>
                </StackPanel>
                <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                    <RadioButton x:ConnectionId='3' Margin="0,0,50,0" x:Name="extensions"                         >Extensions</RadioButton>
                    <RadioButton x:ConnectionId='4' Margin="0,0,50,0" x:Name="date"                   >Date</RadioButton>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <StackPanel Margin="0,10,0,0">
            <!-- Manage -->
            <StackPanel Margin="0,0,0,30">
                <StackPanel HorizontalAlignment="Left">
                    <TextBlock FontSize="25">Catalog</TextBlock>
                </StackPanel>
                <StackPanel HorizontalAlignment="Right" Margin="0,-33,0,0">
                    <Button x:ConnectionId='2'                                   >Customize</Button>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Page>

