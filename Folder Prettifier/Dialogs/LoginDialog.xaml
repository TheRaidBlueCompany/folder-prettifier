<ContentDialog
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="Folder_Prettifier.Dialogs.LoginDialog"
    x:Name="loginDialog"
    Title="Login"
    PrimaryButtonText="Login"
    PrimaryButtonClick="LoginUser"
    SecondaryButtonText="Signup"
    SecondaryButtonClick="SignupUser"
    CloseButtonText="Cancel"
    DefaultButton="Primary">

    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <TextBox Header="Email Address" PlaceholderText="Email" />
        <PasswordBox Header="Password" PlaceholderText="Password" Margin="0,5,0,0" />
    </StackPanel>
</ContentDialog>
